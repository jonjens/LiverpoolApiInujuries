@model IEnumerable<ConsumeApi.Models.Players>

@{
    ViewData["Title"] = "Players";
}

<div>
    <img id="logo" src="https://upload.wikimedia.org/wikipedia/en/thumb/0/0c/Liverpool_FC.svg/1200px-Liverpool_FC.svg.png" />
</div>

<div id="">
    <div class="text-center">
        <h1 class="display-4" style="padding: 50px;">Liverpool FC Injury Department</h1>
    </div>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="2000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" style="height: 500px;" src="https://talksport.com/wp-content/uploads/sites/5/2020/10/NINTCHDBPICT000614842959-1-e1603047077335.jpg?strip=all&w=960&quality=100" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" style="height: 500px;" src="https://www.thesun.co.uk/wp-content/uploads/2018/12/NINTCHDBPICT0004557069431.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" style="height: 500px;" src="https://images2.minutemediacdn.com/image/upload/c_fill,w_912,h_516,f_auto,q_auto,g_auto/shape/cover/sport/ssc-napoli-v-liverpool-uefa-champions-league-group-c-5d667b92badfd6da76000001.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <h2 class="text-center display-4" style="padding: 50px;">Injuries</h2>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>
                    <h1>First Name</h1>
                </th>
                <th>
                    <h1>Last Name</h1>
                </th>
                <th>
                    <h1>Injured</h1>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Injury)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>